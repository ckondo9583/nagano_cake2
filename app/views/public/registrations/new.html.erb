<div class="container">
  <div class="row">

    <div class="col-md-2">
    </div>

     <div class="col-md-8">


<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


<!--登録情報のカスタマイズ-->
<div class="field">
    <div class="namelabel">名前</div>
    <%= f.label :last_name, "(姓）", class: "label" %>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form" %>
    <%= f.label :first_name, "(名）", class: "label" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form" %>
</div>
 
  
  <div class="field">
    <div class="namelabel">フリガナ</div>
    <%= f.label :last_name_kana, "(セイ）", class: "label" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form" %>
    <%= f.label :first_name_kana, "(メイ）", class: "label" %>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form" %>
</div>
  
  <div class="field">
    <%= f.label :postal_code, "郵便番号", class: "label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",class:"form" %>
  </div>
  
  <div class="field">
    <%= f.label :address,"住所",class:"label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address",class:"form" %>
  </div>
  
  <div class="field">
    <%= f.label :telephone_number,class:"label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",class:"form" %>
  </div>
  
<!--登録情報のカスタマイズここまで-->

  <div class="field">
    <%= f.label :email,class:"label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form" %>
  </div>

  <div class="field">
    <%= f.label :password,class:"label" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,class:"label"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

  </div>
  
   <div class="col-md-2">
</div>

