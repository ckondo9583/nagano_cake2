<div class="container">
  <div class="row">

    <div class="col-md-1">
    </div>

     <div class="col-md-10">

<h3>新規会員登録</h3>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


<!--登録情報-->

<div class="field">
    <div class="namelabel">名前</div>
    <%= f.label :last_name, "(姓)",class: "sublabel"%>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form" %>
    <%= f.label :first_name,"(名)", class: "sublabel" %>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form" %>
</div>


  <div class="field">
    <div class="namelabel">フリガナ</div>
    <%= f.label :last_name_kana, "(セイ)", class: "sublabel" %>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", class: "form" %>
    <%= f.label :first_name_kana, "(メイ)", class: "sublabel"%>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", class: "form" %>
  </div>
  
  <div class="field">
    <%= f.label :email,"メールアドレス",class:"label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form" %>
  </div>

  <div class="field">
    <%= f.label :postal_code, "郵便番号", class: "label" %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code",class:"form" %>
  </div>

  <div class="field">
    <%= f.label :address,"住所",class:"label" %>
    <%= f.text_field :address, autofocus: true, autocomplete: "address",class:"longform" %>
  </div>

  <div class="field">
    <%= f.label :telephone_number,"電話番号",class:"label" %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",class:"form" %>
  </div>

  <div class="field">
    <%= f.label :password,"パスワード(#{@minimum_password_length}文字以上)",class:"label" %>
    <% if @minimum_password_length %>
   
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form"%>
  </div>

  <div class="field">
    <%= f.label :password_confirmation ,"パスワード（確認用）",class:"label"%>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" ,class:"form"%>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>



<h3>すでに登録済みの方</h3>

<%= link_to 'こちら', new_customer_session_path %>からログインしてください。


  </div>

   <div class="col-md-1">
</div>

