<h1>public/item#index</h1>

<div class="container">
  <div class="row">

    <div class="col-md-1">
    </div>

     <div class="col-md-10">

       <h3>商品一覧</h3>
       
       <!--商品一覧の表-->
       <table class="table table-hover table-inverse">
         <thead>
           <tr>
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
         </tr>
         </thead>

         <tbody>
         <% @items.each do |item| %>
         <tr>
           <td><%= item.id %></td>
           <td><%= link_to item.name , item_path(item) %></td>
           <td><%= item.price %></td>
         </tr>
         <% end %>
         </tbody>
       </table>


     </div>





    <div class="col-md-1">
    </div>
