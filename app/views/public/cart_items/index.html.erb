<% cart_item = nil %>
<h3>ショッピングカート</h3>

<table class="table table-bordered">
     <thead>
       <tr>
         <th class="table-secondary">商品名</th>
         <th class="table-secondary">税込価格</th>
         <th class="table-secondary">数量</th>
         <th class="table-secondary"></th>
       </tr>
     </thead>
     <tbody>
       <% @cart_items.each do |cart_item| %>
         <tr>
           <td><%= cart_item.item.name %></td>
           <td><%= cart_item.item.price %></td>
           <td><%= form_with model:cart_item, url:cart_item_path(cart_item.id) do |f| %>
              <%= f.select :amount, *[1..10] %>
              <%= f.submit "変更" , class: "btn btn-success" %>
              <% end %></td>
           <td><%= link_to "削除する",cart_item_path(cart_item), method: :delete, "data-confirm" => "本当に削除しますか？" ,class: "btn btn-danger"%></td>
         </tr>
       <% end %>
     </tbody>

   </table>
   
    <%= link_to '買い物を続ける', items_path ,class: "btn btn-primary" %>

   <table class="table table-bordered justify-content-md-end">
   <tr>
   <td class="table-secondary">合計金額:</td>
   <td><%= @total %>円</td>
   </tr>
　 </table>
　 
   <%= link_to '注文を確定する', new_order_path ,class: "btn btn-primary" %>