<h1>Admin::Items#index</h1>
<p>Find me in app/views/admin/items/index.html.erb</p>

<div class="container">
  <div class="row">

    <div class="col-md-1">
    </div>

     <div class="col-md-10">

       <h3>商品一覧</h3>
       <%= link_to "商品追加", new_admin_item_path  %>

       <!--商品一覧の表-->
       <table class="table table-hover table-inverse">
         <thead>
           <tr>
           <th>商品ID</th>
           <th>商品名</th>
           <th>税抜価格</th>
         </tr>
         </thead>

         <tbody>
         <% @items.each do |item| %>
         <tr>
           <td><%= item.id %></td>
           <td><%= link_to item.name , admin_item_path(item) %></td>
           <td><%= item.price %></td>
         </tr>
         <% end %>
         </tbody>
       </table>


     </div>





    <div class="col-md-1">
    </div>
